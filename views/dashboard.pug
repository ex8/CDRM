extends layouts/base

block content
    .level
        .level-left
            h1.subtitle.is-3
                span.has-text-grey-light Hello
                strong  #{user.first_name}
    .columns.is-multiline
        .column.is-12-tablet.is-6-desktop.is-6-widescreen
            .notification.is-link.has-text
                p.title.is-1 1
                p.subtitle.is-4 Total Newsletters
        .column.is-12-tablet.is-6-desktop.is-6-widescreen
            .notification.is-primary.has-text
                p.title.is-1 1
                p.subtitle.is-4 Total Writers
        .column.is-12-tablet.is-6-desktop.is-6-fullhd
            .card
                .card-content
                    h2.title.is-4 Most Popular Newsletters
                    .media
                        .media-content
                            p.title.is-5.is-spaced.is-marginless
                                a(href='#') TITLE
                            p.subtitle.is-7 Published: DATE
                    a.button.is-link.is-outlined(href='/newsletters') View all newsletters
        .column.is-12-tablet.is-6-desktop.is-6-fullhd
            .card
                .card-content
                    h2.title.is-4 Top Writers
                    .media
                        .media-content
                            p.title.is-5.is-spaced.is-marginless
                                a(href='/about') NAME
                        .media-right 2 Newsletters
                    a.button.is-link.is-outlined(href='/about') View all writers
